{% extends 'base.html.twig' %}
{% block title %}SnowTricksOC - Connection{% endblock %}
{% block css %}<link rel="stylesheet" href="{{ asset('custom/login/style.css') }}">{% endblock %}
{% block content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="spacertop50"></div>
    <div class="container">
        <div class="col-12 text-center">
            <div class="offset-xl-4 col-xl-4 offset-sm-0 col-sm-12">
                <h1 class="h3 mb-3 font-weight-normal">Se connecter ?</h1>
                <hr>
                <form action="{{ path('login') }}" method="post" class="form-signin">
                    <div class="form-group">
                        <label for="username">Nom d'utilisateur:</label>
                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" id="password" name="_password" />
                    </div>
                    <button type="submit" class="btn btn-outline-secondary btn-lg">Connection !</button>
                </form>
            </div>
        </div>
    </div>







    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}


{% endblock %}