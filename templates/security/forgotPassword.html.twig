{% extends 'base.html.twig' %}
{% block title %}SnowTricksOC - Mot de Passe Perdu{% endblock %}

{% block content %}
    <div class="spacertop50"></div>
    <div class="container">
        <div class="col-12 text-center">
            <div class="offset-xl-4 col-xl-4 offset-sm-0 col-sm-12">
                <h1 class="h3 mb-3 font-weight-normal">Mot de passe oubli√© ?</h1>
                <hr>
                <form action="{{ path('forgotPassword') }}" method="post" class="form-signin">
                    <div class="form-group">
                        <label for="username">Nom d'utilisateur:</label>
                        <input type="text" id="username" class="form-control" name="_username"/>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('username') }}">
                    <button type="submit" class="btn btn-outline-secondary btn-lg">Connection !</button>
                </form>
            </div>
            <div class="spacertop25"></div>
        </div>
    </div>
{% endblock %}