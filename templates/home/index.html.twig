{% extends 'base.html.twig' %}

{% block title %}SnowTricksOC - Acceuil{% endblock %}
{% block css  %}<link rel="stylesheet" href="{{ asset('custom/home/style.css') }}">{% endblock %}
{% block content %}
    <!-- IMG TOP -->
    <div class="col-12" style="margin:0; padding:0;">
        <div id="linkTricks">
            <a href="#tricks" class="linkTricksLinks"><i class="fas fa-arrow-alt-circle-down fa-3x"></i></a>
        </div>
        <img src="{{ asset('img/back.jpg') }}" alt="" style="width:100%;" id="bgImg">
    </div>
    <!-- CONTAINER TRICKS -->
    <div class="container containerAcc" id="tricks">
        <div class="row">
            <div class="col-12">
                <h1>Trick List</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row">
                    {% for trick in tricks %}
                        <div class="col-md-3 thumb" >
                            <div class="card">
                                {% if trick.getListingPicture() %}
                                    <img class="card-img-top" src="{{ trick.getListingPicture.getName }}" alt="Card image cap">
                                {% else %}
                                    <img class="card-img-top" src="http://blog.kesi-art.com/wp-content/uploads/elementor/thumbs/VISUEL-NON-DISPONIBLE-nchgtciah9pdkun8mutbeagowv4fc9zk23qz6hmx8m.png" alt="Card image cap">
                                {% endif %}
                                <div class="card-body">
                                    <p class="card-text">
                                        <a href="hj/kl"><bold>{{ trick.name|upper }}</bold></a>
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <span class="float-right">
                                            <a href="lk/mlk"><i class="fas fa-edit"></i></a>
                                            <a href="" class="deletIcon" trickId="{{ trick.Id  }}" trickName="{{ trick.name }}" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-trash-alt"></i></a>
                                        </span>
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Cette action est irr√©versible. Souhaitez-vous continuer ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a id="deleteButton" href="trick/delete/id"><button type="button" class="btn btn-danger">Supprimer</button></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}<script src="{{ asset('custom/home/scriptHome.js') }}"></script>{% endblock %}

