{% extends 'base.html.twig' %}
{% block title %}SnowTricksOC - Connection{% endblock %}
{% block css %}<link rel="stylesheet" href="{{ asset('custom/login/style.css') }}">{% endblock %}
{% block content %}
    {% if error %}
        <div class="flash-warning col-12 text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="spacertop50"></div>
    <div class="container">
        <div class="col-12 text-center">
            <div class="offset-xl-4 col-xl-4 offset-sm-0 col-sm-12">
                <h1 class="h3 mb-3 font-weight-normal">Se connecter ?</h1>
                <hr>
                <form action="{{ path('app_user_login') }}" method="post" class="form-signin" novalidate>
                    <div class="form-group">
                        <label for="username">Nom d'utilisateur:</label>
                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" id="password" name="_password" required />
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-outline-secondary btn-lg">Connection !</button>
                </form>
            </div>
            <div class="spacertop25"></div>
            <a href="{{ path('app_user_forgotpassword') }}">Mot de pass oubli√© ?</a>
        </div>
    </div>
{% endblock %}